<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white"
    android:layout_margin="10dp"
    tools:context=".Dki">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"

        android:src="@drawable/chao"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE YOUR ACCOOUT"
        android:textSize="25dp"
        android:typeface="normal"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        android:background="@drawable/uwu"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tieNhapUsernamesignup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Email"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:textColor="#52292424"
            android:background="@null"

            android:textColorHint="#9C27B0" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        android:background="@drawable/uwu"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tieNhapmatkhausignup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Password"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:textColor="#52292424"
            android:background="@null"
            android:textColorHint="#9C27B0" />


    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btndki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="CREATE YOUR ACCOOUT"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/uwu2"


            app:cornerRadius="20dp" />






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/black"/> <!-- Đường line ngang -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"/> <!-- Chữ "or" -->

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/black"/> <!-- Đường line ngang -->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon3"
            android:background="@drawable/uwu3"/>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon1"
            android:layout_marginStart="10dp"
            android:background="@drawable/uwu3"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon2"
            android:background="@drawable/uwu3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Already have an accout?"
            />

        <TextView
            android:id="@+id/dangkiii"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Sign In"
            android:textColor="#66CCFF"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>