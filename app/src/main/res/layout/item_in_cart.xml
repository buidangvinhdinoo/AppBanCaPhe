<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_gioHang"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#F5F5F5">

        <ImageView
            android:id="@+id/imgGHAnhSP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/default_cafe_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            android:gravity="center|start">

            <TextView
                android:id="@+id/txtGHTenSP"
                style="@style/edt_Label"
                android:text="tittle"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtGHGia"
                style="@style/edt_Label"
                android:text="tittle"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnHGTru"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_remove_2"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/edtGHSoLuong"
            style="@style/edt_Label"
            android:textSize="18dp"
            android:text="88"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnGHCong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_add_circle"
            android:background="#F5F5F5" />

    </LinearLayout>
</androidx.cardview.widget.CardView>