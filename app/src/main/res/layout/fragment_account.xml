<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE4E4"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp"
    android:id="@+id/frame_container"
    tools:context=".fragment.Account">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Poly Coffee"
        android:fontFamily="@font/itim"
        android:textSize="30sp"
        android:textColor="@color/orange" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Admin"
        android:textSize="40sp"
        android:textColor="@color/red" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">

        <TextView
            android:id="@+id/item_infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Thông tin tài khoản"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_repass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Đổi mật khẩu"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_revenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Thống kê doanh thu"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_staffs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Thống kê nhân viên"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_addcup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Thêm cốc cafe mới"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_addtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Thêm loại cafe mới"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_addstaff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Thêm nhân viên"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Đăng Xuất"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
